<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Imperial Recruitment Invoice</title>

    <style>
      .invoice-box {
        max-width: 800px;
        margin: auto;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, .15);
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
      }

      .invoice-box table {
        width: 100%;
        line-height: inherit;
        text-align: left;
      }

      .invoice-box table td {
        padding: 5px;
        vertical-align: top;
      }

      .invoice-box table tr td:nth-child(2) {
        text-align: right;
      }

      .invoice-box table tr.top table td {
        padding-bottom: 20px;
      }

      .invoice-box table tr.top table td.title {
        font-size: 45px;
        line-height: 45px;
        color: #333;
      }

      .invoice-box table tr.information table td {
        padding-bottom: 40px;
      }

      .invoice-box table tr.footer table td {
        border-top: 1px solid #eee;
        padding-top: 20px;
        padding-bottom: 20px;
      }

      .invoice-box table tr.heading td {
        background: #eee;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
      }

      .invoice-box table tr.details td {
        padding-bottom: 20px;
      }

      .invoice-box table tr.item td{
        border-bottom: 1px solid #eee;
      }

      .invoice-box table tr.item.last td {
        margin-bottom: 60px;
        border-bottom: 1px solid #eee;
      }

      .invoice-box table tr.total.first td:nth-child(5) {
        padding-top: 40px;
      }
      .invoice-box table tr.total.first td:nth-child(6) {
        padding-top: 40px;
      }

      .invoice-box table tr.total td:nth-child(6) {
      }

      .invoice-box table tr.total.last td:nth-child(5) {
        border-top: 2px solid #eee;
        font-weight: bold;
      }
      .invoice-box table tr.total.last td:nth-child(6) {
        border-top: 2px solid #eee;
        font-weight: bold;
      }

      @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td {
          width: 100%;
          display: block;
          text-align: center;
        }

        .invoice-box table tr.information table td {
          width: 100%;
          display: block;
          text-align: center;
        }
      }

    </style>
</head>

<body>
  <div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
      <tr class="top">
        <td colspan="6">
          <table>
            <tr>
              <td class="title">
                <img src="https://firebasestorage.googleapis.com/v0/b/crud-1054b.appspot.com/o/Profile%2Flogo_new_1609920064119?alt=media&token=4d1cd301-de47-46e5-b6e5-5993137b844c" style="width:100%; max-width:150px;">
              </td>

              <td>
                <strong>Invoice # <%= data.invoice %></strong><br>
                Created: <%= data.DATE_CREATED %><br>
                Due: <%= data.DUE_DATE %>
                <br><br>
                Client Ref: <strong><%= data.CLIENT_ID.id %></strong><br>
                VAT Reg.: <%= data.CLIENT_ID.VATNumber %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr class="information">
        <td colspan="6">
          <table>
            <tr>
              <td><strong>BILL TO</strong><br>
                <%= data.CLIENT_NAME %><br>
                <%= data.CLIENT_ID.companyAddress %><br>
                <%= data.CLIENT_ID.addressLine2 %><br>
                <%= data.CLIENT_ID.city %><br>
                <%= data.CLIENT_ID.postcode %>
              </td>

              <td><strong>IMPERIAL RECRUITMENT</strong><br>
              124 Great Portland Street<br>
              London W1W 6PP<br>
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <tr class="heading">
        <td>
          Employee No.
        </td>

        <td>
          Employee Name
        </td>

        <td>
          Timesheet No.
        </td>

        <td>
          Hours
        </td>

        <td>
          Charge Rate
        </td>

        <td>
          NET
        </td>
      </tr>
      <% var NetSum = 0;  %>
      <% if (data.workers.length) { %>
        <% data.workers.forEach(function (worker) { %>
          <% NetSum += worker.net %>
          <tr>
            <td><%= worker.workerId.workerId %></td>
            <td><%= worker.workerId.forename %> <%= worker.workerId.surename %></td>
            <td><%= data.TS_ID %></td>
            <td><%= worker.hours %></td>
            <td>$<%= worker.chargeRate %>/hr</td>
            <td><%= worker.net %></td>
          </tr>
        <% }) %>
      <% } %>

      <tr class="total first">
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>Subtotal:</td>

        <td>$<%= NetSum %></td>
      </tr>

      <tr class="total">
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>VAT:</td>

        <td>
          ${TAX_RATE}
        </td>

      <tr class="total last">
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>Total:</td>

        <td>$<%= NetSum %></td>
      </tr>

      <tr class="footer">
        <td colspan="6">
          <table>
            <tr>
              <td>
                <p>
                  Thank you for your business.
                </p>
                <p>
                  <strong>Pay by cheque:</strong><br>
                  IMPERIAL RECRUITMENT AGENCY LTD<br>
                  124 Great Portland Street, London W1W 6PP
                </p>
                <p>
                  <strong>Pay by BACS:</strong><br>
                  Bank: Lloyds Bank Plc<br>
                  Account Number: 01933208<br>
                  Sort Code: 30-93-68<br>
                  Account Name: Imperial Recruitment Agency Ltd.
                </p>
                <p>
                  Please ensure we receive your remittance advice to:
                  <strong>sales@imperialrecruitment.com</strong>
                </p>
                <p>
                  Account enquiries please phone 0208 962 9990 (ext. 26354).<br>
                  Invoice queries must be advised within 10 days of receipt.
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
</body>
</html>
